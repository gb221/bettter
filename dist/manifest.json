{
    "name": "Bettter",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Make Dribbble Bettter.",
    "homepage_url": "https://twitter.com/alexjamesvale",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "browser_action": {
      "default_title": "Bettter",
      "default_popup": "popup.html"
    },
    "default_locale": "en",
    "background": {
      "scripts": [
        "js/background.js"
      ],
      "persistent": true
    },
    "permissions": [
      "storage"
    ],
    "content_security_policy": "default-src 'self';",
    "content_scripts": [
      {
        "matches": [
          "https://dribbble.com/*"
        ],
        "js": [
          "js/content.js"
        ]
      }
    ]
  }
  
